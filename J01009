import java.util.*;
public class TongGiaiThua {
    public static void main(String[] args){
        int n;
        Scanner in=new Scanner(System.in);
        n=in.nextInt();
        long sum=0;
        long gt=1;
        for(int i=1;i<=n;i++){
            gt=(long)i*gt;
            sum=sum+gt;
        }
        System.out.println(sum);
    }
}
